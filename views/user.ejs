<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="theme-color" content="#ffdf00">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/Public/images/List.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/Public/css/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
    <title>
        <%= user.name %>
    </title>
    <style>
        /* style table */
        table {
            /* border-collapse: collapse; */
            width: 100%;
            color: black;
            font-family: monospace;
            background: white;
            padding: 1rem;
            font-size: 20px;
            text-align: left;
        }

        table,
        th,
        td {
            border: 1px solid gray;
            border-collapse: collapse;
        }

        td {
            padding: 2px;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="container">
            <h2>
                Today:
            </h2>
            <hr>
            <div class="flex jcse aic" id="roadmapers">
                <a href="/jyoti">
                    <div class="person flex">
                        <div class="person-name">
                            Jyotisuman
                        </div>
                        <div class="person-count">
                            10
                        </div>
                    </div>
                </a>
                <a href="/priyansh">
                    <div class="person flex">
                        <div class="person-name">
                            Priyansh
                        </div>
                        <div class="person-count">
                            10
                        </div>
                    </div>
                </a>
                <a href="/harsh">
                    <div class="person flex">
                        <div class="person-name">
                            Harsh
                        </div>
                        <div class="person-count">
                            10
                        </div>
                    </div>
                </a>
                <a href="/ajit">
                    <div class="person flex">
                        <div class="person-name">
                            Ajit
                        </div>
                        <div class="person-count">
                            10
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="container user-info">
        <!-- username -->

    </div>
    <div class="container" style="overflow-x: auto;">
        <!-- table -->
        <!-- sort by topic search bar -->
        <h2 style="margin-bottom: 1rem;">
            <%=username%>'s Progress
        </h2>
        <hr>
        <!-- sorting and filter -->
        <div class="flex filters" style="
        margin-bottom: 1rem;
        justify-content: space-between;
        ">
            <div class="diffitculty-filter">
                <select name="difficulty" onchange="filterTablebyDifficulty(this.value)" id="difficulty">
                    <option value="All">All</option>
                    <option value="Easy">Easy</option>
                    <option value="Medium">Medium</option>
                    <option value="Hard">Hard</option>
                </select>
            </div>
            <div class="flex aic">
                <input type="text" placeholder="Enter topic name" id="topic-filter">
                <button class="btn btn-primary btn-sm fw-bold" id="filter" onclick="filterByTopic()">Filter</button>
                <!-- reset -->
                <button class="btn btn-danger btn-sm fw-bold" id="reset" onclick="disableAllFilters()">Reset</button>
            </div>
        </div>
        <table id="table">
            <tbody>
                <tr>
                    <th>Date</th>
                    <th>
                        Difficulty
                        <span style="cursor: pointer;" onclick="orderTablebyDifficulty(this)">
                            Ë„
                        </span>
                    </th>
                    <th>Link</th>
                    <th>Topics</th>
                </tr>
                <%for(let i=0; i<dsa.length; i++){ %>
                    <tr class="<%= dsa[i].difficulty%>">
                        <td>
                            <!-- formatDateString -->
                            <!-- months list -->
                            <% const months=["Jan", "Feb" , "Mar" , "Apr" , "May" , "Jun" , "Jul" , "Aug" , "Sep"
                                , "Oct" , "Nov" , "Dec" ]; %>
                                <% let date=new Date(dsa[i].date); %>
                                    <% let day=date.getDate(); %>
                                        <% let month=months[date.getMonth()]; %>
                                            <% let year=date.getFullYear(); %>
                                                <% let dateString=day + " " + month + " " + year; %>
                                                    <!-- formatDateString -->
                                                    <%= dateString %>

                        </td>
                        <td>
                            <%= dsa[i].difficulty %>
                        </td>
                        <td><a href="<%= dsa[i].link %>" target="_blank">
                                <%= dsa[i].link %>
                            </a></td>
                        <td>
                            <%= dsa[i].topics %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <script src="/Public/app/js/app.js"></script>
    <script src="/Public/app/js/analysis.js"></script>
</body>

</html>